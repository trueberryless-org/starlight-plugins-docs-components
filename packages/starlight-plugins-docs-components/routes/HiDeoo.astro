---
import StarlightPage from '@astrojs/starlight/components/StarlightPage.astro';
import { Aside } from '@astrojs/starlight/components';
import { ResourcesIntro } from "@hideoo/starlight-plugins-docs-components";
import ResourcesList from '../components/ResourcesList.astro';
import { capitalCase } from "change-case";
import { getResourceTypes } from '../libs/resources';

export const prerender = true

const resourceTypes = await getResourceTypes('https://gist.githubusercontent.com/HiDeoo/3882c01c3618180c9a834b8d06a9e7c5/raw/')
---

<StarlightPage 
    frontmatter={{ 
        title: `Content from HiDeoo`, 
        description: `Discover other Starlight plugins, components and tools developed by HiDeoo.`, 
        sidebar: { order: 3 } 
    }} 
    headings={resourceTypes.map((resourceType) => (
        { depth: 2, slug: `${resourceType}`, text: capitalCase(resourceType) }
    ))}
>
    <Aside>
        <p>We simply left this page as a thank you for <a href="https://github.com/HiDeoo">HiDeoo</a>. Be sure to check out the cool stuff below from this <strong>legendary guy</strong> ðŸ™Œ!</p>
    </Aside>

    <ResourcesIntro />
    <ResourcesList resourcesUrl='https://gist.githubusercontent.com/HiDeoo/3882c01c3618180c9a834b8d06a9e7c5/raw'/>
</StarlightPage>

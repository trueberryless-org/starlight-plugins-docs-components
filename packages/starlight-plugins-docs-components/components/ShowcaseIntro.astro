---
import { ShowcaseCTA } from 'starlight-showcases'

export type ShowcaseIntroProps = Props

interface Props {
  cta: string
  href: string,
  emptyList: boolean
}

const { cta, href, emptyList } = Astro.props
---

<ShowcaseCTA>
  {cta}  
  <br />
  {!emptyList && (<p><a {href}>Open a PR</a> to add it to the list!</p>)}
  {emptyList && (<p>Be the first one to <a {href}>open a PR</a> and initialize the list!</p>)}
</ShowcaseCTA>

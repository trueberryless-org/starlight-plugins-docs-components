---
import { ShowcaseCTA } from "starlight-showcases";

export type ShowcaseIntroProps = Props;

interface Props {
  cta: string;
  href: string;
  emptyList: boolean;
}

const { cta, href, emptyList } = Astro.props;
const guideHref =
  "https://starlight-plugins-docs-components.trueberryless.org/add-showcase/";
---

<ShowcaseCTA>
  {cta}
  <br />
  {
    !emptyList && (
      <p>
        Follow <a href={guideHref}>our guide</a> and <a {href} target="_blank" rel="noopener noreferrer">open a PR</a> to add it to the list!
      </p>
    )
  }
  {
    emptyList && (
      <p>
        Be the first one to follow <a href={guideHref}>our guide</a>, <a {href} target="_blank" rel="noopener noreferrer">open a PR</a> and initialize the list!
      </p>
    )
  }
</ShowcaseCTA>
